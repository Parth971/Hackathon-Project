<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectResources"
    android:background="@drawable/resource_back">

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resources"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:padding="4dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/resourceRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/add_resource"
        android:layout_below="@+id/heading"/>

    <ImageButton
        android:id="@+id/add_resource"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/add_resources"
        android:background="@drawable/ripple_btn"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"/>


</RelativeLayout>